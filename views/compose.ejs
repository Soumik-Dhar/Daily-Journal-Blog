<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label for="pTitle">Title</label>
    <input type="text" class="form-control" name="postTitle" id="pTitle">
  </div>

  <div class="form-group">
    <label for="pBody">Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="50" id="postBody"></textarea>
  </div>

  <input type="submit" class="btn btn-dark" name="publish" value="Publish">

</form>

<%- include("partials/footer"); -%>
