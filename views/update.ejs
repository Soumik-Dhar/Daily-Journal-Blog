<%- include("partials/header"); -%>

<h1>Edit</h1>
<form action="/update" method="post">

  <div class="form-group">
    <label for="pTitle">Title</label>
    <input type="text" class="form-control" name="title" id="pTitle" maxlength="23" value="<%= title %>" required>
  </div>

  <div class="form-group">
    <label for="pBody">Post</label>
    <textarea class="form-control" name="content" rows="7" cols="50" id="postBody" required><%= content %></textarea>
  </div>

  <button type="submit" class="btn" name="postId" value="<%= id %>">Update</button>
</form>

<%- include("partials/footer"); -%>
